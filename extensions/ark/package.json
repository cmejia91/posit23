{
	"name": "ark",
	"displayName": "ark",
	"description": "Language Features for the Amalthea R Kernel",
	"version": "0.0.2",
	"publisher": "vscode",
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/client/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "ark.setKernelPath",
				"title": "ARK: Set Kernel Path"
			}
		],
		"configuration": {
			"type": "object",
			"title": "R Language Runtime (ARK)",
			"properties": {
				"ark.kernel.path": {
					"scope": "window",
					"type": "string",
          "default": "",
					"description": "Path on disk to the ARK kernel executable. Temporary setting until the kernel is embedded in the extension / language pack."
        },
				"ark.trace.server": {
					"scope": "window",
					"type": "string",
					"enum": [
						"off",
						"messages",
						"verbose"
					],
          "enumDescriptions": [
              "No tracing.",
              "Log messages from the server to the output panel.",
              "Log messages from the server as well as verbose output."
          ],
					"default": "off",
					"description": "Traces the communication between VS Code and the language server."
				}
			}
		},
        "languages": [
            {
                "id": "r",
                "extensions": [
                    ".R",
                    ".r",
                    ".rprofile"
                ],
                "aliases": [
                    "R",
                    "r"
                ],
                "configuration": "./language-configuration.json"
            }

        ],
        "grammars": [
            {
                "language": "r",
                "scopeName": "source.r",
                "path": "./syntaxes/r.tmGrammar.gen.json"
            }
        ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"extensionDependencies": [
		"posit.jupyter-adapter"
	],
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.12.1",
		"@typescript-eslint/parser": "^5.12.1",
		"@vscode/test-electron": "^2.1.2",
		"eslint": "^8.9.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.1",
		"typescript": "^4.5.5",
		"vsce": "^2.11.0"
	},
	"dependencies": {
		"portfinder": "^1.0.28",
		"vscode-languageclient": "^7.0.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/rstudio/amalthea"
	}
}
